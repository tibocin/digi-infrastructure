# -----------------------------------------------------------------------------
# File: pcs/env.example
# Purpose: Environment variables template for PCS development environment
# Related: docker-compose.dev.yml, src/pcs/core/config.py
# Tags: environment, configuration, development, template
# -----------------------------------------------------------------------------

# PCS Application Settings
PCS_ENVIRONMENT=development
PCS_DEBUG=true
PCS_APP_NAME="Prompt and Context Service (PCS)"
PCS_VERSION=1.0.0
PCS_HOST=0.0.0.0
PCS_PORT=8000
PCS_API_PREFIX=/api/v1

# Security Settings
PCS_SECURITY_SECRET_KEY=dev_secret_key_12345
PCS_SECURITY_JWT_SECRET_KEY=dev_jwt_secret_key_12345
PCS_SECURITY_JWT_ALGORITHM=HS256
PCS_SECURITY_JWT_EXPIRE_MINUTES=30
PCS_SECURITY_API_KEY_HEADER=X-API-Key

# Database Settings (Centralized Infrastructure)
# For host connections (outside Docker), use localhost
# For Docker container connections, use digi-postgres
PCS_DB_HOST=localhost
PCS_DB_PORT=5432
PCS_DB_USER=pcs_user
PCS_DB_PASSWORD=pcs_pass
PCS_DB_NAME=pcs
PCS_DB_DIALECT=postgresql+asyncpg
PCS_DB_POOL_SIZE=10
PCS_DB_MAX_OVERFLOW=20
PCS_DB_POOL_TIMEOUT=30
PCS_DB_POOL_PRE_PING=true

# Database URL for Alembic and direct connections (host machine)
DATABASE_URL=postgresql://pcs_user:pcs_pass@localhost:5432/pcs

# Redis Settings (Centralized Infrastructure)
PCS_REDIS_HOST=digi-redis
PCS_REDIS_PORT=6379
PCS_REDIS_DB=3
PCS_REDIS_PASSWORD=
PCS_REDIS_SSL=false
PCS_REDIS_SOCKET_TIMEOUT=5
PCS_REDIS_CONNECTION_TIMEOUT=5
PCS_REDIS_MAX_CONNECTIONS=20

# Qdrant Settings (Centralized Infrastructure)
PCS_QDRANT_HOST=digi-qdrant
PCS_QDRANT_PORT=6333
PCS_QDRANT_GRPC_PORT=6334
PCS_QDRANT_API_KEY=your_qdrant_api_key_here
PCS_QDRANT_PREFER_GRPC=true

# Qdrant Collection Namespaces
# Each application gets its own isolated collection for knowledge storage
QDRANT_COLLECTION_DIGI_CORE=digi_core_knowledge
QDRANT_COLLECTION_LERNMI=lernmi_knowledge
QDRANT_COLLECTION_BEEP_BOOP=beep_boop_knowledge
QDRANT_COLLECTION_PCS=pcs_knowledge
QDRANT_COLLECTION_STACKR=stackr_knowledge
QDRANT_COLLECTION_SATSFLOW=satsflow_knowledge
QDRANT_COLLECTION_BITSCROW=bitscrow_knowledge
QDRANT_COLLECTION_DEVAO=devao_knowledge
QDRANT_COLLECTION_REVAO=revao_knowledge
QDRANT_COLLECTION_TIBOCIN_XYZ=tibocin_xyz_knowledge
QDRANT_COLLECTION_LUMI_ADVENTURES=lumi_adventures_knowledge

# Neo4j Settings (Centralized Infrastructure)
PCS_NEO4J_URI=bolt://digi-neo4j:7687
PCS_NEO4J_USER=neo4j
PCS_NEO4J_PASSWORD=digi_secure_123

# Logging Settings
PCS_LOGGING_LEVEL=INFO
PCS_LOGGING_FORMAT=json
PCS_LOGGING_FILE_ENABLED=true
PCS_LOGGING_FILE_PATH=logs/pcs.log

# CORS Settings
PCS_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]

# Development Specific Settings
PCS_DEVELOPMENT_RELOAD=true
PCS_DEVELOPMENT_DEBUGPY_PORT=5678
PCS_DEVELOPMENT_WAIT_FOR_CLIENT=true
